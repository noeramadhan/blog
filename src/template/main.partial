    <style>
        :root {
            --dark: 8, 8, 8;
            --light: 240, 240, 240;
            --main: var(--light);
            --sec: var(--dark);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            font-size: 16px;
            font-family: 'Roboto Mono', monospace;
            text-rendering: optimizeLegibility;
            font-feature-settings: "kern";
            font-kerning: normal;
            color: rgb(var(--main));
        }

        body {
            padding: 3.5rem 2rem 2.5rem 2rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 4rem;
            background-color: rgb(var(--sec));
        }

        a,
        a:visited {
            color: rgb(var(--main));
            text-decoration: underline;
            text-underline-offset: .5ch;
            text-decoration-style: dotted;
            text-decoration-color: rgba(var(--main), 0.2);
        }

        a:hover {
            text-decoration: underline;
            text-underline-offset: .5ch;
        }

        .item__wrapper {
            max-width: 50ch;
            margin-bottom: 2rem;
            padding: 0 1.5rem 0 0;
            line-height: 1.3;
        }

        .item__title {
            margin-bottom: .25rem;
        }

        .item__date::before {
            content: '#';
        }

        .item__date {
            color: rgba(var(--main), 0.5);
        }

        .list {
            list-style: none;
        }

        .single {
            max-width: calc(64ch + 32ch + 2ch);
        }

        .single__content p {
            margin-bottom: 1rem;
            line-height: 1.8;
        }

        .single__content p:last-child {
            margin-bottom: 2rem;
        }

